        <item name="colorPrimary">@color/ug_yellow_500</item>
        <item name="colorOnPrimary">@color/ug_black_500</item>
        <item name="colorPrimaryDark">@color/ug_yellow_700</item>
        <item name="colorOnSurface">@color/ug_black</item>
        <item name="colorAccent">@color/ug_yellow_700</item>
        <item name="colorSurface">@color/ug_gray_50</item>
        <item name="colorControlNormal">@color/ug_black_100</item>
